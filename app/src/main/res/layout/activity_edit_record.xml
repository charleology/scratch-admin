<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nighty"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".EditRecord">

    <LinearLayout
        android:id="@+id/pinkHeader"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/pink"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/editRecordBackIv"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1.35"
            android:onClick="back"
            android:src="@drawable/ic_round_arrow_back_ios_24"
            app:tint="@color/whitey"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:paddingStart="30dp"
            android:text="Edit Record"
            android:textColor="@color/whitey"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1.35"
            android:alpha="0"
            android:src="@drawable/ic_round_add_24"
            app:tint="@color/whitey" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.9"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="@color/lightgray"
                android:foreground="@drawable/ic_round_camera_alt_24"
                android:foregroundGravity="center"
                android:foregroundTint="@color/textgray"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/editRecordPicIv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.055"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textAlignment="center"
                android:textColor="@color/textgray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:saveEnabled="true"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/editDogChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="DOG"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editCatChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="CAT"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.055"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENDER"
                android:textAlignment="center"
                android:textColor="@color/textgray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:saveEnabled="true"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/editMaleChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="MALE"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editFemaleChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="FEMALE"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1.055"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SIZE"
                android:textAlignment="center"
                android:textColor="@color/textgray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:saveEnabled="true"
                app:selectionRequired="true"
                app:singleLine="true"
                app:singleSelection="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/editSmallChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="SMALL"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editMediumChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="MEDIUM"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editLargeChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="LARGE"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />


            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.95"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="COLOR"
                android:textAlignment="center"
                android:textColor="@color/textgray"
                android:textSize="15dp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:saveEnabled="true"
                app:selectionRequired="true"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/editBlackChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="BLACK"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editBrownChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="BROWN"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editCreamChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="CREAM"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editWhiteChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="WHITE"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editOrangeChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="ORANGE"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/editOGrayChip"
                    style="@style/My_Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:text="GRAY"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8.2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/saveChangesBtn"
            style="@style/orangeButton_style"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="SAVE CHANGES" />

    </LinearLayout>

</LinearLayout>